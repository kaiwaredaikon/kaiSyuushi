<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jp.co.kaiwaredaikon320.syushi"
    android:versionCode="1"
    android:versionName="0.0.1" >

    <!-- Sdk15(4.03)～Sdk19(4.4) -->
    <uses-sdk
        android:minSdkVersion="15"
        android:maxSdkVersion="19"
        android:targetSdkVersion="19" />

 	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
	<uses-permission android:name="android.permission.INTERNET"/>

    <!-- screenOrientation="portrait"→縦向きに固定
    	 configChanges="orientation|keyboardHidden"→回転時にActivityの再生成の抑制
     -->
    <application
        android:theme="@android:style/Theme.NoTitleBar"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name">
<!--
        android:uiOptions="splitActionBarWhenNarrow"
 -->
        <!-- カレンダー -->
        <activity
	        android:theme="@android:style/Theme.NoTitleBar"
            android:name=".MainActivity"
            android:label="@string/app_name"
	        android:screenOrientation="portrait"
	        android:configChanges="orientation|keyboardHidden"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

		<!-- 収支表示用のリストビュー -->
        <activity
            android:theme="@android:style/Theme.NoTitleBar"
            android:name=".ListViewActivity"
            android:label="日付"
	        android:screenOrientation="portrait"
	        android:configChanges="orientation|keyboardHidden">
        </activity>


		<!-- 収支入力用アクティビティ -->
        <activity
	        android:theme="@android:style/Theme.NoTitleBar"
            android:name=".AddListActivity"
            android:windowSoftInputMode="stateAlwaysHidden"
	        android:screenOrientation="portrait"
	        android:configChanges="orientation|keyboardHidden"
            >
        </activity>
        

		<!-- 収支入力用アクティビティ Bak
        <activity
	        android:theme="@style/CustomTheme"
            android:name=".AddListActivity"
            android:label="日付"
            android:windowSoftInputMode="stateAlwaysHidden"
	        android:screenOrientation="portrait"
	        android:configChanges="orientation|keyboardHidden"
            >
        </activity>
 		-->

        <!-- 総合データ用アクティビティ -->
        <activity
	        android:theme="@style/CustomTheme"
			android:name=".DataPreferenceActivity"
            android:label="総合データ"
	        android:screenOrientation="portrait"
	        android:configChanges="orientation|keyboardHidden"
            >
        </activity>

        <activity
            android:theme="@android:style/Theme.NoTitleBar"
            android:name=".DrawDataActivity"
            android:label="総合データ"
	        android:screenOrientation="portrait"
	        android:configChanges="orientation|keyboardHidden"
            >
        </activity>

        <!-- 総合データ用詳細 -->
        <activity
            android:theme="@android:style/Theme.NoTitleBar"
            android:name=".DrawDataDetailedActivity"
            android:label="総合データ詳細"
	        android:screenOrientation="portrait"
	        android:configChanges="orientation|keyboardHidden">
        </activity>


        <!-- 設定画面アクティビティ -->
        <activity
	        android:theme="@style/CustomTheme"
			android:name=".MyPreferenceActivity"
            android:label="オプション"
	        android:screenOrientation="portrait"
	        android:configChanges="orientation|keyboardHidden"
            >
        </activity>

        <!-- webviewアクティビティ -->
        <activity
	        android:theme="@style/CustomTheme"
			android:name=".WebviewActivity"
            android:label="ヘルプ"
            android:launchMode="singleTop"
	        android:screenOrientation="portrait"
	        android:configChanges="orientation|keyboardHidden"
            >
        </activity><!-- ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>


    </application>

</manifest>
