<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout03"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- ヘッダー(上の項目用)-->
    <include layout="@layout/include_header_main" />

	<!-- ｶﾚﾝﾀﾞｰ表示関連-->
	<jp.co.kaiwaredaikon320.syushi.view.calendar.CalendarView
		android:id="@+id/Calendar"
		android:layout_width="fill_parent"
		android:layout_height="0dp"
		android:layout_weight="16"/>

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_weight="1"
	    android:layout_height="0dp"
	    android:orientation="horizontal">
		<!-- 月間収支 -->
        <TextView
            android:id="@+id/textViewMonth"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/textview_waku_01"
            android:ems="10"
            android:gravity="center"
            android:text="@string/month_calendar_view"
            android:textColor="@color/white"
            android:textSize="16sp"
            />

		<!-- 年間収支 -->
        <TextView
            android:id="@+id/textViewYear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/textview_waku_01"
            android:ems="10"
            android:gravity="center"
            android:text="@string/year_calendar_view"
            android:textColor="@color/white"
            android:textSize="16sp"
            />
	</LinearLayout>

	<LinearLayout
	    android:layout_weight="3"
	    android:layout_width="fill_parent"
	    android:layout_height="0dp"
	    android:orientation="horizontal"
	    >

		<LinearLayout
		    android:layout_weight="1"
		    android:layout_width="0dp"
		    android:layout_height="match_parent"
		    android:orientation="horizontal"
		    android:onClick="onClickLinearLayoutMonth"
		    android:background="@drawable/selector_main"
            >

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/textViewMonth2_1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:gravity="center"
                        android:layout_marginRight="10dp"
                        android:text="@string/str_com_investment"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:singleLine="true"
                        android:ellipsize="end"/>
                    <TextView
                        android:id="@+id/textViewMonth3_1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:gravity="center"
                        android:layout_marginRight="10dp"
                        android:text="@string/str_com_recovery"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:singleLine="true"
                        android:ellipsize="end"/>
                    <TextView
                        android:id="@+id/textViewMonth4_1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:gravity="center"
                        android:layout_marginRight="10dp"
                        android:text="@string/str_com_total"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:singleLine="true"
                        android:ellipsize="end"/>
			</LinearLayout>

			<LinearLayout
			    android:layout_weight="1"
			    android:layout_width="0dp"
			    android:layout_height="fill_parent"
			    android:orientation="vertical">
				<TextView
					android:id="@+id/textViewMonth2_2"
					android:layout_width="match_parent"
					android:layout_height="0dp"
					android:layout_weight="1"
					android:ems="10"
					android:gravity="center|right"
					android:layout_marginRight="10dp"
					android:text="@string/zero_calendar_view"
					android:textColor="#000000"
					android:textSize="16dp"
					android:singleLine="true"
					android:ellipsize="end"/>
				<TextView
					android:id="@+id/textViewMonth3_2"
					android:layout_width="match_parent"
					android:layout_height="0dp"
					android:layout_weight="1"
					android:ems="10"
					android:gravity="center|right"
					android:layout_marginRight="10dp"
					android:text="@string/zero_calendar_view"
					android:textColor="#000000"
					android:textSize="16dp"
					android:singleLine="true"
					android:ellipsize="end"/>
				<TextView
					android:id="@+id/textViewMonth4_2"
					android:layout_width="match_parent"
					android:layout_height="0dp"
					android:layout_weight="1"
					android:ems="10"
					android:gravity="center|right"
					android:layout_marginRight="10dp"
					android:text="@string/zero_calendar_view"
					android:textColor="#000000"
					android:textSize="16dp"
					android:singleLine="true"
					android:ellipsize="end"/>
			</LinearLayout>
		</LinearLayout>

		<LinearLayout
		    android:layout_weight="1"
		    android:layout_width="0dp"
		    android:layout_height="fill_parent"
		    android:orientation="horizontal"
		    android:onClick="onClickLinearLayoutYear"
            android:background="@drawable/selector_main">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textViewYear2_1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:text="@string/str_com_investment"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:singleLine="true"
                    android:ellipsize="end"/>
                <TextView
                    android:id="@+id/textViewYear3_1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:text="@string/str_com_recovery"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:singleLine="true"
                    android:ellipsize="end"/>
                <TextView
                    android:id="@+id/textViewYear4_1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:text="@string/str_com_total"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:singleLine="true"
                    android:ellipsize="end"/>
            </LinearLayout>

			<LinearLayout
			    android:layout_weight="1"
			    android:layout_width="0dp"
			    android:layout_height="fill_parent"
			    android:orientation="vertical">
				<TextView
					android:id="@+id/textViewYear2_2"
					android:layout_width="match_parent"
					android:layout_height="0dp"
					android:layout_weight="1"
					android:ems="10"
					android:gravity="center|right"
					android:layout_marginRight="10dp"
					android:text="@string/zero_calendar_view"
					android:textColor="#000000"
					android:textSize="16dp"
					android:singleLine="true"
					android:ellipsize="end"/>
				<TextView
					android:id="@+id/textViewYear3_2"
					android:layout_width="match_parent"
					android:layout_height="0dp"
					android:layout_weight="1"
					android:ems="10"
					android:gravity="center|right"
					android:layout_marginRight="10dp"
					android:text="@string/zero_calendar_view"
					android:textColor="#000000"
					android:textSize="16dp"
					android:singleLine="true"
					android:ellipsize="end"/>
				<TextView
					android:id="@+id/textViewYear4_2"
					android:layout_width="match_parent"
					android:layout_height="0dp"
					android:layout_weight="1"
					android:ems="10"
					android:gravity="center|right"
					android:layout_marginRight="10dp"
					android:text="@string/zero_calendar_view"
					android:textColor="#000000"
					android:textSize="16dp"
					android:singleLine="true"
					android:ellipsize="end"/>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>

    <!-- フッタ
    <android.support.v4.app.FragmentTabHost
        android:id="@android:id/tabhost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0" />
    </android.support.v4.app.FragmentTabHost>
-->

</LinearLayout>